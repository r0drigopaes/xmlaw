<!-- ELEMENTS -->

<!ELEMENT mapschema (mapsch.name,mapsch.validator*,mapsch.entry+)>

<!ELEMENT mapsch.name (#PCDATA)>

<!ELEMENT mapsch.validator (#PCDATA)>

<!ELEMENT mapsch.entry EMPTY>
<!ATTLIST mapsch.entry
	layer	ID	#REQUIRED
	type	(NML | RT) #REQUIRED
	path	CDATA #IMPLIED
	row		CDATA	#IMPLIED
	col		CDATA	#IMPLIED
        index   (false|true)        #IMPLIED
>

<!-- End Map Schema XML DTD v.1.0a -->
